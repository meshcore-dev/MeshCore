inline constexpr const char* MQTT_USERNAME = "";

// Password used when the host falls back to MQTT_HOST and the user leaves
// the WiFiManager field blank.
inline constexpr const char* MQTT_PASSWORD = "";

}  // namespace defaults
}  // namespace remote_telemetry
